<div class="bg-image ">
    <h1 class="text-center pb-4 pt-4">Pokedex for the Kanto Region</h1>
    <div class="container mx-auto text-center">
        <div class="row row-cols-1 row-cols-md-4 g-4">
            {{#each pokemonList}}
            <div class="col">
                <div class="card border-3" style="width: 18rem;">
                    <img src="{{this.imgUrl}}" class="card-img-top" alt="{{this.name}}-image">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.species}}</p>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <a href="/pokemon/{{this._id}}" class="card-link">
                                <button type="button" class="btn btn-outline-success">Details</button>
                            </a>
                            {{#if currentUser}}
                            <form action="/pokemon/{{this._id}}/like" method="POST">

                                <button type="submit" class="btn btn-outline-danger" id="like-button"> <span
                                        class="fa-solid fa-heart"></span> {{this.likes}}</button>


                            </form>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>