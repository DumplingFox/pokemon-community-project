<h1>Pokedex for the Kanto Region</h1>


<div class="row row-cols-1 row-cols-md-4 g-4">
    {{#each pokemonList}}
    <div class="col">
        <div class="card" style="width: 18rem;">
            <img src="{{this.imgUrl}}" class="card-img-top" alt="{{this.name}}-image">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.species}}</p>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <a href="/pokemon/{{this._id}}" class="card-link">
                        <button type="button" class="btn btn-outline-success">Details</button>
                    </a>

                    <form action="/pokemon/{{this._id}}/like" method="POST">
                        <button type="submit" class="btn btn-outline-danger"><span class="fa fa-heart-o"></span> {{this.likes}}</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>