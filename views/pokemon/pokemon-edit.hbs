<h1>this is the page for updating pokemon!</h1>

<h2>Edit the pokemon: {{pokemon.name}} </h2>
<form method="POST" action="/pokemon/{{pokemon._id}}/edit">

    <label> Name:
        <input type="text" name="name" value="{{pokemon.name}}">
    </label>

    <label> Type:

        <select name="type" multiple>
            {{#each typeEnum}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>

    </label>
    

    <label> Species:
        <input type="text" name="species" value="{{pokemon.species}}">
    </label>

    <label> National No.:
        <input type="number" name="indexNumber" min="1" value="{{pokemon.indexNumber}}">
    </label>

    <label> Height:
        <input type="number" name="height" value="{{pokemon.height}}">
    </label>

    <label> Weight:
        <input type="number" name="weight" value="{{pokemon.weight}}">
    </label>

    <div>
        <legend>Regional Exclusive?</legend>

        <div>
            <input type="radio" id="yes" name="regionalExclusive" value="yes">
            <label for="yes">Yes</label>
        </div>

        <div>
            <input type="radio" id="no" name="regionalExclusive" value="no" checked>
            <label for="no">No</label>
        </div>
    </div>

    <label> Region:
        <select name="region" multiple>
            {{#each regionEnum}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </label>

    <label> Pokemon Image:
        <input type="text" name="imgUrl" value="{{pokemon.imgUrl}}">
    </label>


    <button type="submit"> Save Changes </button>

</form>