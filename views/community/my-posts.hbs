<body class="bg-my-posts">


    <div class="container">
        <h2 class="text-center my-4">This is my posts</h2>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            {{#each post}}
            <div class="col">
                <div class="card h-100">
                    <img src="{{this.imageUrl}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.content}}</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a href="/community/post/{{this._id}}/edit" class="btn btn-outline-warning">Update</a>
                        <a href="/community/post/{{this._id}}" class="btn btn-outline-primary">Read More</a>
                        <form action="/my-posts/{{this._id}}/like" method="POST">
                            <button type="submit" class="btn btn-outline-danger" id="like-community-button"> <span
                                    class="fa-solid fa-heart"></span> {{this.likes}}</button>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</body>