<h2>Edit the post: {{post.title}}</h2>

<form action="/community/post/{{post._id}}/edit" method="post" enctype="multipart/form-data">
    <label> Title:
        <input type="text" name="title" value="{{post.title}}" />
    </label>
    <label> Content:
        <input type="text" name="content" value="{{post.content}}" />
    </label>

    <label>Image:
        <input type="file" name="post-image" class="form-control-file" />
        <input type="text" name="existingImage" hidden value="{{imageUrl}}">
    </label>

    <button>Save changes</button>
</form>